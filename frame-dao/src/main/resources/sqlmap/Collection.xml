<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.frame.dao.CollectionDao">


	<!-- 通用查询结果列-->
	<!-- 所有查询列 -->
	<sql id="QUERY_COLUMN_LIST">
		<![CDATA[
			id,
			source_id AS sourceId,
			user_id AS userId,
			source_type AS sourceType,
			feature,
			modified,
			created,
			yn
		]]>
	</sql>

	<!-- 查询列来源表 -->
	<sql id="QUERY_FROM_TABLE"><![CDATA[FROM tb_collection]]></sql>



	<!--全部条件(更多功能可以通过queryData扩展实现) -->
	<sql id="QUERY_WHERE_CLAUSE">
		<where>
			<if test="id!=null and id!=''"><![CDATA[AND id = #{id}]]></if>
			<if test="sourceId!=null and sourceId!=''"><![CDATA[AND source_id = #{sourceId}]]></if>
			<if test="sourceType!=null and sourceType!=''"><![CDATA[AND source_type = #{sourceType}]]></if>
			<if test="userId!=null and userId!=''"><![CDATA[AND user_id = #{userId}]]></if>
			<if test="feature!=null and feature!=''"><![CDATA[AND feature = #{feature}]]></if>
			<if test="modified!=null and modified!=''"><![CDATA[AND modified = #{modified}]]></if>
			<if test="created!=null and created!=''"><![CDATA[AND created = #{created}]]></if>
			<if test="yn!=null and yn!=''"><![CDATA[AND yn = #{yn}]]></if>
		</where>
	</sql>
	<!-- 智能排序与分页 -->
	<sql id="QUERY_ORDER_LIMIT_CONDTION">
		<if test="orderField != null and orderField != '' and orderFieldType != null and orderFieldType != ''">
			<![CDATA[ORDER BY ${orderField} ${orderFieldType}]]>
		</if>
		<if test="startIndex != null and startIndex &gt;= 0 and pageSize != null and pageSize &gt; 0"><![CDATA[LIMIT #{startIndex},#{pageSize}]]></if>
	</sql>
	<!-- 更新列字段,只要不为NULL则更新,除开主键列 -->	<!-- 修 改-->
	<sql id="UPDATE_COLUMN_SET">
		<set>
			<if test="sourceId!=null and sourceId!=''"><![CDATA[source_id = #{sourceId},]]></if>
			<if test="sourceType!=null and sourceType!=''"><![CDATA[source_type = #{sourceType},]]></if>
			<if test="userId!=null and userId!=''"><![CDATA[user_id = #{userId},]]></if>
			<if test="feature!=null and feature!=''"><![CDATA[feature = #{feature},]]></if>
			<if test="modified!=null"><![CDATA[modified = #{modified},]]></if>
			<if test="created!=null"><![CDATA[created = #{created},]]></if>
			<if test="yn!=null and yn!=''"><![CDATA[yn = #{yn},]]></if>
		</set>
	</sql>
	<!-- 插入记录 -->
	<insert id="insertArticalCollection" parameterType="articalCollection" useGeneratedKeys="true" keyProperty="id">
		<![CDATA[
			INSERT INTO tb_collection
 			(source_id,source_type,user_id,feature,modified,created,yn)
			 VALUES 
 			(#{sourceId},#{sourceType},#{userId},#{feature},#{modified},#{created},#{yn})
		]]>
	</insert>

	<!-- 返回插入的编号,在事务开启状态下有效 -->
	<select id="lastSequence" resultType="int"><![CDATA[SELECT LAST_INSERT_ID() AS id]]></select>

	<!-- 删除记录,主键IN(array)  -->
	<delete id="deleteByArrayKey" parameterType="java.lang.reflect.Array">
		 <![CDATA[DELETE FROM tb_collection  WHERE id IN]]>
		 <foreach collection="array" item="id" open="(" separator="," close=")">
			 <![CDATA[#{id}]]>
		</foreach>
	</delete>

	<!--删除,通过条件-->
	<delete id="deleteByCondtion" parameterType="collection">
		<![CDATA[DELETE FROM tb_collection]]>
			<include refid="QUERY_WHERE_CLAUSE"/>
	</delete>

	<!--修改记录通过主键-->
	<update id="updateByKey" parameterType="collection">
		<![CDATA[UPDATE tb_collection]]>
			<include refid="UPDATE_COLUMN_SET"/>
			<![CDATA[WHERE id = #{id}]]>
	</update>

	<!-- 查询,通过主键IN(array) -->
	<select id="selectEntryArray" parameterType="java.lang.reflect.Array" resultType="collection">
		<![CDATA[SELECT]]>
		<include refid="QUERY_COLUMN_LIST"/>
		<include refid="QUERY_FROM_TABLE"/>
		<![CDATA[WHERE id IN]]>
		<foreach collection="array" item="id" open="(" separator="," close=")">
			<![CDATA[#{id}]]>
		</foreach>
	</select>

	<!-- 查询,通过条件 -->
	<select id="selectEntryList" parameterType="collection" resultType="collection">
		<![CDATA[SELECT]]>
		<include refid="QUERY_COLUMN_LIST"/>
		<include refid="QUERY_FROM_TABLE"/>
		<include refid="QUERY_WHERE_CLAUSE"/>
		<include refid="QUERY_ORDER_LIMIT_CONDTION"/>
	</select>

	<!-- 总数查询,通过条件-->
	<select id="selectEntryListCount" parameterType="collection" resultType="int">
		<![CDATA[SELECT COUNT(id) AS dataCount]]>
		<include refid="QUERY_FROM_TABLE"/>
		<include refid="QUERY_WHERE_CLAUSE"/>
	</select>



</mapper>